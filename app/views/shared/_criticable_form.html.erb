<%= form_with(model: [critic.criticable, critic], class: "flex flex-column gap-4") do |form| %>
  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :title, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.text_field :title, class: "input__content", placeholder: "Critic incoming" %>
      </div>
      <% if critic.errors.messages[:title].any? %>
      <span class="content-sm input__error-message">
        <%= critic.errors.messages[:title].join(", ")%>
      </span>
      <% end %>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :body, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.text_area :body, class: "input__content", placeholder: "This is my respectful critic" %>
      </div>
      <% if critic.errors.messages[:body].any? %>
      <span class="content-sm input__error-message">
        <%= critic.errors.messages[:body].join(", ")%>
      </span>
      <% end %>
    </div>
  </div>

  <div class="checkbox mb-2">
    <%= form.check_box :approved, class: "checkbox__input" %>
    <div class="checkbox__text-container">
      <%= form.label :approved, class:"content--sm" %>
    </div>
  </div>

  <%= form.submit class: "button button--primary fit-content" %>

<% end %>
