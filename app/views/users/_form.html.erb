<%= form_with(model: user, url: "/profile", class: "flex flex-column gap-4") do |form| %>
  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :username, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.text_field :username, class: "input__content", placeholder: "johndoe" %>
      </div>
      <%=errors_for(user, :username)%>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :email, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.email_field :email, class: "input__content", placeholder: "john@example.com" %>
      </div>
      <%=errors_for(user, :email)%>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :birth_date, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.date_field :birth_date, class: "input__content", placeholder: "john@example.com" %>
      </div>
      <%=errors_for(user, :birth_date)%>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :first_name, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.text_field :first_name, class: "input__content", placeholder: "John" %>
      </div>
      <%=errors_for(user, :first_name)%>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :last_name, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.text_field :last_name, class: "input__content", placeholder: "Doe" %>
      </div>
      <%=errors_for(user, :last_name)%>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :password, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.password_field :password, class: "input__content", placeholder: "******" %>
      </div>
      <%=errors_for(user, :password)%>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :password_confirmation, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.password_field :password_confirmation, class: "input__content", placeholder: "*******" %>
      </div>
      <%=errors_for(user, :password_confirmation)%>
    </div>
  </div>

  <%= form.submit class: "button button--primary fit-content" %>

<% end %>
